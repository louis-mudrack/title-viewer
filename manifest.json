{
    "manifest_version": 3,
    "name": "Title Display",
    "description": "Display titles for every element with a title attribute on a webpage.",
    "version": "1.0",
    "author": "Louis Mudrack",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "scripts/index.js"
    },
    "action": {
        "default_icon": "images/icon-inactive.png",
        "default_title": "Title Display"
    },
    "permissions": ["activeTab", "scripting", "storage", "windows"],
    "host_permissions": ["<all_urls>"]
}
